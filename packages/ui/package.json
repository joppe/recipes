{
  "name": "@recipes/ui",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"npm run watch:storybook\" \"npm run watch:css\"",
    "build": "concurrently \"npm run build:css\" \"npm run build:storybook\"",
    "watch:css": "tailwindcss -i ./src/styles.css -o ./public/style.css --watch",
    "watch:storybook": "start-storybook -p 6006",
    "build:css": "tailwindcss -i ./src/styles.css -o ./public/style.css",
    "build:storybook": "storybook build",
    "prettier": "prettier --write ./src/**/*.{js,ts,tsx,css,json,md} --no-error-on-unmatched-pattern",
    "prettier:check": "prettier --check ./src/**/*.{js,ts,tsx,css,json,md} --no-error-on-unmatched-pattern",
    "lint": "eslint ./src"
  },
  "devDependencies": {
    "@apollo/client": "^3.7.3",
    "@babel/core": "^7.20.7",
    "@recipes/eslint-config": "*",
    "@recipes/tailwind-config": "*",
    "@storybook/addon-actions": "^6.5.15",
    "@storybook/addon-essentials": "^6.5.15",
    "@storybook/addon-interactions": "^6.5.15",
    "@storybook/addon-links": "^6.5.15",
    "@storybook/builder-webpack4": "^6.5.15",
    "@storybook/manager-webpack4": "^6.5.15",
    "@storybook/react": "^6.5.15",
    "@storybook/testing-library": "^0.0.13",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "babel-loader": "^8.3.0",
    "concurrently": "^7.6.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "graphql": "^16.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "tailwindcss": "^3.2.4"
  }
}
